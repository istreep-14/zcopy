{
  "update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 3,
  "name": "Smart Zetamac Coach",
  "version": "1.0.0",
  "description": "Analyze your Zetamac arithmetic performance and get personalized coaching to improve your mental math speed and accuracy.",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://*.zetamac.com/*",
    "https://*.googleapis.com/*",
    "https://*.gstatic.com/*",
    "https://script.google.com/*",
    "https://script.googleusercontent.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Smart Zetamac Coach"
  },
  "content_scripts": [
    {
      "matches": ["https://*.zetamac.com/*"],
      "js": ["inject.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "index.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["firebase-config.js"],
      "matches": ["<all_urls>"]
    }
  ]
} 