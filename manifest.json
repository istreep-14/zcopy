{
  "manifest_version": 3,
  "name": "Smart Zetamac Coach",
  "version": "1.0.0",
  "description": "Track your Zetamac arithmetic performance",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://*.zetamac.com/*",
    "https://script.google.com/*",
    "https://script.googleusercontent.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Smart Zetamac Coach"
  },
  "content_scripts": [
    {
      "matches": ["https://*.zetamac.com/*"],
      "js": ["inject.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "index.js"
  }
}
